{% extends 'base.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-2"></div>
        <div class="col-8">
            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-secondary">Retour</a>
            <h1>Distance: </h1>
            <p>Il y a {{ distance | round(2, 'floor') }}km entre vous et l'adresse de l'événement <strong>{{ event.name }}</strong></p>
        </div>
    </div>
{% endblock %}
